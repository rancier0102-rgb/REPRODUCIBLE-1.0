{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "TV Cinema - Tu cine en casa",
  "short_name": "TV Cinema",
  "description": "Disfruta del mejor contenido de películas y series en tu Smart TV con streaming 4K y experiencia optimizada",
  "version": "1.0.0",
  "manifest_version": 3,
  
  "start_url": "/?source=pwa",
  "scope": "/",
  "id": "tv-cinema-app-v1",
  
  "display": "fullscreen",
  "display_override": ["fullscreen", "standalone", "minimal-ui"],
  "orientation": "landscape",
  
  "theme_color": "#0a0a0a",
  "background_color": "#0a0a0a",
  
  "icons": [
    {
      "src": "/images/icons/icon-48x48.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icons/icon-256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icons/icon-1024x1024.png",
      "sizes": "1024x1024",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "/images/screenshots/home-1920x1080.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Pantalla de inicio en TV"
    },
    {
      "src": "/images/screenshots/player-1920x1080.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Reproductor de video"
    },
    {
      "src": "/images/screenshots/browse-1920x1080.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Explorar contenido"
    },
    {
      "src": "/images/screenshots/details-1920x1080.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Detalles de película"
    }
  ],
  
  "categories": [
    "entertainment",
    "video",
    "multimedia"
  ],
  
  "lang": "es-ES",
  "dir": "ltr",
  
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webos",
      "url": "https://tvcinema.com/webos",
      "id": "com.tvcinema.webos"
    },
    {
      "platform": "tizen",
      "url": "https://tvcinema.com/tizen",
      "id": "com.tvcinema.tizen"
    },
    {
      "platform": "androidtv",
      "url": "https://play.google.com/store/apps/details?id=com.tvcinema.androidtv",
      "id": "com.tvcinema.androidtv"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Continuar viendo",
      "short_name": "Continuar",
      "description": "Continúa donde lo dejaste",
      "url": "/continue?source=shortcut",
      "icons": [
        {
          "src": "/images/shortcuts/continue-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mi Lista",
      "short_name": "Mi Lista",
      "description": "Accede a tu lista personalizada",
      "url": "/mylist?source=shortcut",
      "icons": [
        {
          "src": "/images/shortcuts/mylist-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Buscar",
      "short_name": "Buscar",
      "description": "Buscar contenido",
      "url": "/search?source=shortcut",
      "icons": [
        {
          "src": "/images/shortcuts/search-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "features": [
    "fullscreen",
    "gamepad",
    "idle-detection",
    "keyboard-lock",
    "screen-wake-lock",
    "storage-access"
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "edge_side_panel": {
    "preferred_width": 480
  },
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "video/*": [".mp4", ".webm", ".mkv", ".avi"],
        "application/x-subrip": [".srt"],
        "text/vtt": [".vtt"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+tvcinema",
      "url": "/watch?url=%s"
    }
  ],
  
  "permissions_policy": {
    "autoplay": ["*"],
    "fullscreen": ["*"],
    "picture-in-picture": ["*"],
    "accelerometer": ["none"],
    "camera": ["none"],
    "geolocation": ["none"],
    "microphone": ["none"],
    "payment": ["none"],
    "usb": ["none"]
  },
  
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; media-src 'self' blob: https:; connect-src 'self' https: wss:; font-src 'self' data:; object-src 'none'; frame-src 'none'"
  },
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  
  "tv_input_support": {
    "remote_control": true,
    "gamepad": true,
    "keyboard": true,
    "mouse": false,
    "touch": false
  },
  
  "tv_features": {
    "pip": true,
    "multi_view": false,
    "voice_control": true,
    "cast": true,
    "dlna": true,
    "hdr": true,
    "dolby_vision": true,
    "dolby_atmos": true
  },
  
  "streaming_capabilities": {
    "max_resolution": "4K",
    "max_framerate": 60,
    "supported_codecs": ["h264", "h265", "vp9", "av1"],
    "supported_containers": ["mp4", "webm", "mkv"],
    "adaptive_streaming": ["hls", "dash"],
    "drm": ["widevine", "playready"]
  }
}
