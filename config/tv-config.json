      "scrollSpeed": 300,
      "pageScrollSpeed": 500,
      "smoothScroll": true,
      "focusMemory": true,
      "spatialNavigation": true,
      "voiceCommands": [
        {
          "command": "play",
          "action": "player.play"
        },
        {
          "command": "pause",
          "action": "player.pause"
        },
        {
          "command": "search",
          "action": "navigation.search"
        },
        {
          "command": "home",
          "action": "navigation.home"
        }
      ]
    },
    
    "streaming": {
      "defaultQuality": "auto",
      "qualityLevels": [
        {
          "id": "auto",
          "label": "Auto",
          "bitrate": 0
        },
        {
          "id": "4k",
          "label": "4K Ultra HD",
          "resolution": "3840x2160",
          "bitrate": 25000,
          "framerate": 60
        },
        {
          "id": "1080p",
          "label": "Full HD",
          "resolution": "1920x1080",
          "bitrate": 8000,
          "framerate": 60
        },
        {
          "id": "720p",
          "label": "HD",
          "resolution": "1280x720",
          "bitrate": 5000,
          "framerate": 30
        },
        {
          "id": "480p",
          "label": "SD",
          "resolution": "854x480",
          "bitrate": 2500,
          "framerate": 30
        }
      ],
      "adaptiveBitrate": true,
      "bufferSize": 30,
      "preloadTime": 5,
      "maxBufferLength": 60,
      "protocol": "hls",
      "drm": {
        "widevine": true,
        "playready": false,
        "fairplay": false
      }
    },
    
    "performance": {
      "lazyLoading": true,
      "preloadImages": true,
      "virtualScrolling": true,
      "debounceScroll": 100,
      "throttleResize": 200,
      "maxConcurrentRequests": 4,
      "requestTimeout": 20000,
      "imageOptimization": true,
      "codeSpitting": true,
      "treeshaking": true,
      "minification": true,
      "compression": "gzip",
      "monitoring": {
        "fps": true,
        "memory": true,
        "network": true,
        "errors": true
      }
    },
    
    "cache": {
      "strategy": "cache-first",
      "maxAge": 86400,
      "maxSize": 500,
      "enableServiceWorker": true,
      "enableIndexedDB": true,
      "enableLocalStorage": true,
      "offlineMode": true,
      "backgroundSync": true,
      "periodicSync": 3600
    },
    
    "accessibility": {
      "enabled": true,
      "screenReader": true,
      "highContrast": false,
      "reducedMotion": false,
      "captions": true,
      "audioDescriptions": false,
      "signLanguage": false,
      "keyboardNavigation": true,
      "focusIndicator": true,
      "announcements": true
    },
    
    "localization": {
      "defaultLanguage": "es",
      "supportedLanguages": ["es", "en", "pt", "fr", "de", "it"],
      "autoDetect": true,
      "dateFormat": "DD/MM/YYYY",
      "timeFormat": "24h",
      "numberFormat": "1.234,56",
      "currency": "EUR"
    },
    
    "security": {
      "contentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; media-src 'self' blob: https:;",
      "strictTransportSecurity": true,
      "certificatePinning": false,
      "integrityCheck": true,
      "obfuscation": true
    },
    
    "updates": {
      "autoUpdate": true,
      "checkInterval": 86400,
      "updateUrl": "https://api.tvcinema.com/updates",
      "forceUpdate": false,
      "notifyUser": true
    },
    
    "telemetry": {
      "enabled": true,
      "endpoint": "https://telemetry.tvcinema.com",
      "interval": 300,
      "batchSize": 100,
      "events": [
        "app_start",
        "app_error",
        "playback_start",
        "playback_end",
        "search",
        "navigation"
      ]
    }
