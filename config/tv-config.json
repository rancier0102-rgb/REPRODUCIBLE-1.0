  "globalSettings": {
    "defaultPlatform": "generic",
    "autoDetectPlatform": true,
    "fallbackPlatform": "generic",
    "debugMode": false,
    "performanceMonitoring": true,
    "errorReporting": true,
    "analytics": true,
    
    "ui": {
      "theme": "dark",
      "autoTheme": true,
      "animations": true,
      "animationSpeed": 1.0,
      "transitionDuration": 300,
      "focusIndicator": "border",
      "focusColor": "#00a8ff",
      "focusSize": 4,
      "fontSize": {
        "small": 18,
        "medium": 24,
        "large": 32,
        "extraLarge": 48
      },
      "safeArea": {
        "top": 40,
        "right": 60,
        "bottom": 40,
        "left": 60
      },
      "grid": {
        "columns": {
          "720p": 4,
          "1080p": 5,
          "4k": 6,
          "8k": 8
        },
        "aspectRatio": "16:9",
        "spacing": 20
      }
    },
    
    "navigation": {
      "keyRepeatDelay": 500,
